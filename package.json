{
  "name": "@callstack/ai-cli",
  "version": "0.8.0",
  "description": "AI assistent in your terminal.",
  "author": "Maciej Jastrzebski <mdjastrzebski@gmail.com> (https://github.com/mdjastrzebski)",
  "homepage": "https://github.com/callstack/ai-cli#readme",
  "license": "MIT",
  "keywords": [
    "ai",
    "cli"
  ],
  "type": "module",
  "main": "build/index.js",
  "source": "src/index.js",
  "bin": {
    "ai": "build/bin.js"
  },
  "files": [
    "build",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli build",
    "release": "release-it",
    "ai": "chmod +x ./build/bin.js && ./build/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstack/ai-cli.git"
  },
  "bugs": {
    "url": "https://github.com/callstack/ai-cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.8",
    "@inkjs/ui": "^1.0.0",
    "@mistralai/mistralai": "^0.1.3",
    "chalk": "^5.3.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "ink": "^4.4.1",
    "ink-link": "^3.0.0",
    "ink-text-input": "^5.0.1",
    "openai": "^4.42.0",
    "prompts": "^2.4.2",
    "react": "^18.2.0",
    "redent": "^4.0.0",
    "tiktoken": "^1.0.14",
    "update-notifier": "^7.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.23.6",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@callstack/eslint-config": "^14.1.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^29.5.12",
    "@types/mock-fs": "^4.13.4",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.2.63",
    "@types/update-notifier": "^6.0.8",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mock-fs": "^5.2.0",
    "prettier": "^3.2.5",
    "release-it": "^15.11.0",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.2.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
