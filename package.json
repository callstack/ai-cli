{
  "name": "@callstack/ai-cli",
  "version": "0.6.0",
  "description": "AI assistent in your terminal.",
  "author": "Maciej Jastrzebski <mdjastrzebski@gmail.com> (https://github.com/mdjastrzebski)",
  "homepage": "https://github.com/callstack/ai-cli#readme",
  "license": "MIT",
  "keywords": [
    "ai",
    "cli"
  ],
  "type": "module",
  "main": "build/index.js",
  "source": "src/index.js",
  "bin": {
    "ai": "build/bin.js"
  },
  "files": [
    "build",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli build",
    "release": "release-it",
    "ai": "chmod +x ./build/bin.js && ./build/bin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstack/ai-cli.git"
  },
  "bugs": {
    "url": "https://github.com/callstack/ai-cli/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "date-fns": "^3.3.1",
    "dotenv": "^16.3.1",
    "openai": "^4.24.1",
    "prompts": "^2.4.2",
    "tiktoken": "^1.0.13",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@callstack/eslint-config": "^14.1.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/mock-fs": "^4.13.4",
    "@types/prompts": "^2.4.9",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^28.1.1",
    "mock-fs": "^5.2.0",
    "prettier": "^3.2.5",
    "release-it": "^15.0.0",
    "typescript": "^5.0.2"
  },
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/build/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
